{
  "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "target": "es2018",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "types": ["node"],
      "typeRoots": [
        "node_modules/@types",
        "node_modules/yup",
        "node_modules/@types/node"
    ],
      "paths": {
          "prisma": ["prisma/prisma.ts"],
          "src/*": ["src/*"],
          "*": [
              "node_modules/*",
          ]
      },
  },
  "include": [
      "src/**/*",
      "prisma/**/*",
  ],
}
